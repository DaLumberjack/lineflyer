<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <!-- Top Menu Bar (Basically moves all menu items here)-->
	<line.flyer.idkjava.MenuBar
		android:id="@+id/menu_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:orientation="horizontal">
    	
    	<!-- grab button -->
    	<ImageButton 
    		android:id="@+id/grab"
    		android:src="@+drawable/grab"
    		android:layout_height="48dip"
    		android:layout_width="48dip" />
    	
    	<!-- Play/Pause button -->
    	<ImageButton
    		android:id="@+id/play_pause_button"
    		android:layout_height="48dip"
    		android:layout_width="48dip"
    		android:gravity="center" />
    	
    	<!-- Save button -->
    	<ImageButton
    		android:id="@+id/save_button"
    		android:src="@+drawable/save"
    		android:layout_height="48dip"
    		android:layout_width="48dip" />
    		
    	<!-- Load button -->
    	<ImageButton
    		android:id="@+id/load_button"
    		android:src="@+drawable/load"
    		android:layout_height="48dip"
    		android:layout_width="48dip" />
    		
    	<!-- Load demo button -->
    	<ImageButton
    		android:id="@+id/linebutton"
    		android:src="@+drawable/linebutton"
    		android:layout_height="48dip"
    		android:layout_width="48dip" />
    		
    	<!-- Exit button -->
    	<ImageButton
    		android:id="@+id/exit_button"
    		android:src="@+drawable/exit"
    		android:layout_height="48dip"
    		android:layout_width="48dip"
    		android:layout_gravity="right" />
    	
	</line.flyer.idkjava.MenuBar>
    
	<!-- Main viewing section -->
	<line.flyer.idkjava.MainView 
		android:id="@+id/main_view"
		android:gravity="center"
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="0px" />
	
	
</LinearLayout>